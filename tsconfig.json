{
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"],
  "compilerOptions": {
    "noImplicitAny": false,
    "lib": ["ESNext", "DOM"],
    "outDir": "dist",
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES6",
    "declaration": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  }
}
